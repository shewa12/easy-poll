<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	convertDeprecationsToExceptions="true"
	verbose="true"
	testdox="true"
	>
	<testsuites>
		<testsuite name="easy-poll">
			<directory>tests/PHPUnit/EasyPollTest.php</directory>
		</testsuite>
		<testsuite name="enqueue-class">
			<directory>tests/PHPUnit/EnqueueTest.php</directory>
		</testsuite>
		<testsuite name="easy-poll-post-class">
			<directory>tests/PHPUnit/EasyPollPostTest.php</directory>
		</testsuite>
		<testsuite name="easy-poll-feedback-class">
			<directory>tests/PHPUnit/FeedbackTest.php</directory>
		</testsuite>
	</testsuites>
</phpunit>
